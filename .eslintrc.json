{
  "extends": [
    "./node_modules/gts/",
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:react/recommended",
    "react-app",
    "react-app/jest"
  ],
  "rules": {
    "prettier/prettier": [
      "warn", 
      {
        "endOfLine":"auto"
      }
    ],
    "tsdoc/syntax": "warn",
    "capitalized-comments": [
      "warn",
      "always",
      {
        "ignoreConsecutiveComments": true,
        "ignoreInlineComments": true
      }
    ],
    "spaced-comment": [
      "warn",
      "always",
      {
        "line": {
          "markers": ["/"],
          "exceptions": ["-", "+"]
        },
        "block": {
          "markers": ["!"],
          "exceptions": ["*"],
          "balanced": true
        }
      }
    ],
    "require-atomic-updates": "error",
    "no-console": "warn",
    "default-case": "warn",
    "default-case-last": "warn",
    "default-param-last": "warn",
    "class-methods-use-this": "warn",
    "eqeqeq": "error",
    "no-magic-numbers": [
      "warn",
      {
        "ignoreArrayIndexes": true
      }
    ],
    "no-multi-spaces": "warn",
    "no-trailing-spaces": "warn",
    "require-await": "error",
    "camelcase": "warn",
    "eol-last": "error",
    "sort-vars": "warn",
    "spellcheck/spell-checker": [
      "warn",
      {
        "skipWords": [
          "calc",
          "Mudd",
          "Hinckley",
          "Steedman",
          "Unordered",
          "Gmail",
          "microservices",
          "codebase",
          "semibold",
          "monospace"
        ],
        "skipWordIfMatch": [
          "Chakra",
          "vh",
          "xl"
        ]
      }
    ]
  },
  "plugins": [
    "react",
    "@typescript-eslint",
    "tsdoc",
    "spellcheck"
  ]
}
